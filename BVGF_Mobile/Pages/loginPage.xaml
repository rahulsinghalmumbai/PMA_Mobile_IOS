<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BVGF.Pages.loginPage"
             xmlns:custom="clr-namespace:BVGF.CustomControls"
             Title="Login"
             BackgroundColor="#F5F5F5"
             NavigationPage.HasNavigationBar="False">

    <Grid Padding="40,20">
        <Grid.GestureRecognizers>
            <TapGestureRecognizer Tapped="OnBackgroundTapped"/>
        </Grid.GestureRecognizers>

        <ScrollView>
            <VerticalStackLayout Spacing="25" VerticalOptions="Center">

                <!-- Logo -->
                <Image Source="logo.jpeg" 
                       WidthRequest="85" 
                       HeightRequest="85"
                       HorizontalOptions="Center"
                       Margin="0,40,0,0"/>

                <Label Text="Welcome Back!" 
                       FontSize="28" 
                       FontAttributes="Bold" 
                       TextColor="#333333" 
                       HorizontalOptions="Center"/>

                <Label Text="Sign in to your account" 
                       FontSize="16" 
                       TextColor="#666666" 
                       HorizontalOptions="Center"/>

                <!-- Mobile Number -->
                <VerticalStackLayout Spacing="8" Margin="0,30,0,0">
                    <Label Text="Mobile Number" 
                           FontSize="14" 
                           TextColor="#333333"/>

                    <Entry x:Name="PasswordEntry" 
                           Placeholder="Enter 10-digit mobile number" 
                           Keyboard="Numeric"
                           FontSize="16" 
                           TextColor="Black"
                           MaxLength="10"
                           HeightRequest="50"
                           BackgroundColor="White"
                           Completed="OnEntryCompleted"/>
                </VerticalStackLayout>

